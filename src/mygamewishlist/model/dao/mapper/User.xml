<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
  
<mapper namespace="mygamewishlist.model.dao.mapper.UserMapper">
	
	<select id="getUserByEmail" resultType="User">
		SELECT * FROM USER WHERE EMAIL = #{email}
	</select>
	
	<insert id="addUser" parameterType="User">
		INSERT INTO USER (NAME, EMAIL) VALUES(#{name},#{email})
	</insert>
	
	<select id="getIdList" resultType="Integer">
		SELECT ID FROM LIST WHERE ID_USER = #{idUser}
	</select>
	
	<select id="getUserByIdList" resultType="User">
		SELECT * FROM USER WHERE ID_LIST = #{}	
	</select>
</mapper>