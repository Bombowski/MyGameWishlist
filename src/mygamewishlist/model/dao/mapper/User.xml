<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
  
<mapper namespace="mygamewishlist.model.dao.mapper.UserMapper">
	
	<select id="getUserByEmail" resultType="User">
		SELECT * FROM USER WHERE EMAIL = #{email}
	</select>
	
	<insert id="addUser" parameterType="User">
		INSERT INTO USER (NAME, EMAIL) VALUES(#{name},#{email})
	</insert>
	
	<select id="getUsersWithList" resultType="User">
		SELECT
			DISTINCT(US.ID), US.NAME
		FROM
			USER US, LIST LI, WISHLIST_GAME WG
		WHERE
			US.ID = LI.ID_USER AND
		    LI.ID = WG.ID_LIST;
	</select>
	
	<select id="getIdListByIdUser" resultType="Integer">
		SELECT
			LI.ID
		FROM
			USER US, LIST LI
		WHERE
			US.ID = LI.ID AND
			US.ID = #{idUser};
	</select>
</mapper>